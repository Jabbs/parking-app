<div class="row">
	<div class="span12">
			<ul class="nav nav-tabs">
			  <li><%= link_to 'Search', new_search_path %></li>
			  <li class="active"><a href="#">All Listings</a></li>
			  <li><%= link_to 'Reservations', reservations_path %></li>
			  <li><%= link_to 'Checkout', checkout_path %></li>
			</ul>
		<table class="table table-striped table-condensed table-hover">
			<thead>
				<tr>
					<th>Spot</th>
					<th>Start</th>
					<th>End</th>
				</tr>
			</thead>
			<tbody>
				<% @listings.each do |listing| %>
				<tr>
					<td><%= listing.spot.name %></td>
					<td><%= listing.start_date.strftime("%m/%d") %> <%= listing.time_slot_start_hour %></td>
					<td><%= listing.end_date.strftime("%m/%d") %> <%= listing.time_slot_end_hour %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
