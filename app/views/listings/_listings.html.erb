<% if @listings && @listings.count != 0 %>
<table class="table table-striped table-condensed">
	<thead>
	  <tr>
	    <th>Spot</th>
	    <th>Listing</th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	<% @listings.each do |listing| %>
	  <tr>
			<td><%= listing.spot.name %></td>
			<td><%= listing.start_date.strftime("%m/%d") %> <%= listing.time_slot_start_hour %> -
					<%= listing.end_date.strftime("%m/%d") %> <%= listing.time_slot_end_hour %>
			</td>
			<td><%= link_to 'Remove', listing_path(listing), method: :delete, confirm: "Are you sure?" %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<hr>
<p><%= link_to 'Reservations', reservations_at_my_spot_path %> at my spot(s).</p>
<% else %>
	<em>You do not have any active listings. Please remember to share your parking spot when its available.
	</em>
<% end %>