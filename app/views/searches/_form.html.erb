<%= form_for(@search) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="row">
	<div class="building_select span2">
		<label>Location:</label>
	</div>
	
	<div class="big-left-margin span6">
		<%= f.collection_select :building_id, @buildings, :id, :full_building_name, {}, class: "span6" %>
	</div>
</div>
<hr>
<div class="row">
	<div class="span2 well well-red big-left-margin">
		<div class="span1">
			<% if @search2 %>
				<%= f.text_field :start_date, placeholder: "Date", value: @search2.start_date, class: "input-small" %>
				<%= f.select :start_time_slot, Listing::TIMES, { selected: @search2.start_time_slot }, class: "input-small" %>
			<% else %>
				<%= f.text_field :start_date, placeholder: "Date", class: "input-small" %>
				<%= f.select :start_time_slot, Listing::TIMES, {}, class: "input-small" %>
			<% end %>
		</div>
	</div>
	<div class="span1 center form-center-well">
		<h3>---to---</h3>
	</div>
	<div class="span2 well well-red">
		<div class="span1">
			<% if @search2 %>
				<%= f.text_field :end_date, placeholder: "Date", value: @search2.end_date, class: "input-small" %>
				<%= f.select :end_time_slot, Listing::TIMES, { selected: @search2.end_time_slot }, class: "input-small" %>
			<% else %>
				<%= f.text_field :end_date, placeholder: "Date", class: "input-small" %>
				<%= f.select :end_time_slot, Listing::TIMES, {}, class: "input-small" %>
			<% end %>
		</div>
	</div>
</div>
<hr>
<div class="row">
	<div class="span5 pull-left">
		<p>
			<em>
				*spots are <span class="money">$3</span> per hour up to <span class="money">$10</span> 
					if under 8 hours. Anything over 8 hours will be <span class="money">$20</span> per day.
			</em>
		</p>
	</div>
	<div class="span1 pull-right">
		<%= f.submit "Search", class: "btn btn-large pull-right" %>
	</div>
</div>
<% end %>