<%= form_for(@search) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= f.hidden_field :building_id, value: current_user.building.id %>
<h3>When would you like to reserve parking?
</h3>
<hr>
<div class="row">
	<div class="span1">
		<label>Start:</label>
	</div>
	<div class="span1">
		<% if @search2 %>
		<%= f.text_field :start_date, placeholder: "Date", value: @search2.start_date, class: "input-small" %>
		<% else %>
		<%= f.text_field :start_date, placeholder: "Date", class: "input-small" %>
		<% end %>
	</div>
	<div class="span2 offset1">
		<% if @search2 %>
		<%= f.select :start_time_slot, Listing::TIMES, selected: @search2.start_time_slot %>
		<% else %>
		<%= f.select :start_time_slot, Listing::TIMES %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="span1">
		<label>End:</label>
	</div>
	<div class="span1">
		<% if @search2 %>
		<%= f.text_field :end_date, placeholder: "Date", value: @search2.end_date, class: "input-small" %>
		<% else %>
		<%= f.text_field :end_date, placeholder: "Date", class: "input-small" %>
		<% end %>
	</div>
	<div class="span2 offset1">
		<% if @search2 %>
		<%= f.select :end_time_slot, Listing::TIMES, selected: @search2.end_time_slot %>
		<% else %>
		<%= f.select :end_time_slot, Listing::TIMES %>
		<% end %>
	</div>
</div>
<hr>
<div class="row">
	<div class="span5 pull-left">
		<p>*spots are <span class="money">$3</span> per hour up to <span class="money">$10</span> 
			if under 8 hours. Anything over 8 hours will be <span class="money">$20</span> per day.</p>
	</div>
	<div class="span1 pull-right">
		<%= f.submit "Search", class: "btn btn-large pull-right" %>
	</div>
</div>
<% end %>