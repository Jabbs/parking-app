<header>
	<div class="navbar navbar-inverse">
	  <div class="navbar-inner">
	    <div class="container">
	      <%= link_to raw('<strong>ShareThe<span class="red">Lot</span></strong>'), root_url, id: 'logo', class: 'brand' %>
				<% if current_user %>
        <ul class="nav pull-left">
					<% if controller_name == "searches" || controller_name == "reservations" %>
						<li class="on"><%= link_to 'Reserve A Spot', new_search_path %></li>
					<% elsif controller_name == "listings" && action_name == "index" %>
						<li class="on"><%= link_to 'Reserve A Spot', new_search_path %></li>
					<% else %>
						<li class="off"><%= link_to 'Reserve A Spot', new_search_path %></li>
					<% end %>
					<% if controller_name == "listings" && action_name == "index" %>
						<li class="off"><%= link_to 'Share My Spot', new_listing_path %></li>
					<% elsif controller_name == "listings" %>
						<li class="on"><%= link_to 'Share My Spot', new_listing_path %></li>
					<% else %>
						<li class="off"><%= link_to 'Share My Spot', new_listing_path %></li>
					<% end %>
				</ul>
				<ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
							Welcome, <%= current_user.first_name %>! <b class="caret red-caret"></b>
						</a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My Account', user_path(current_user) %></li>
              <li><%= link_to 'Register My Spot', new_lease_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
				<div class="building_name">Building: <strong class="red"><%= current_user.building.name %></strong></div>
				<% else %>
				<h2 class="tag_in_nav">#sharing</h2>
				<h2 class="tag_in_nav">#parking</h2>
				<h2 class="tag_in_nav">#garage</h2>
				<h2 class="tag_in_nav">#chicago</h2>
				<% end %>
	    </div>
	  </div>
	</div>
</header>