<header>
	<div class="navbar navbar-inverse navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <%= link_to 'ParkingApp', root_url, id: 'logo', class: 'brand' %>
				<p class="inline pull-left"><small class="pink">BETA</small></p>
        <ul class="nav pull-left">
						<li><%= link_to 'Reserve Spots', listings_path %></li>
						<li><%= link_to 'List My Spot', new_listing_path %></li>
				</ul>
				<% if current_user %>
				<ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
							Welcome, <%= current_user.first_name %>! <b class="caret"></b>
						</a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My Account', '#', method: :get %></li>
              <li><%= link_to 'Register My Spot', new_lease_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
				<% else %>
				<ul class="nav pull-right">
          <li><%= link_to 'Sign In', login_path %></li>
        </ul>
				<% end %>
	    </div>
	  </div>
	</div>
</header>