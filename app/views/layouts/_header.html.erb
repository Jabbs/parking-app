<header>
	<div class="navbar navbar-inverse navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <%= link_to "ShareTheLot", root_url, id: 'logo', class: 'brand' %>
				<p class="inline pull-left"><small class="red">BETA</small></p>
				<% if current_user %>
        <ul class="nav pull-left">
					<% if controller_name == "searches" %>
						<li class="on"><%= link_to 'Reserve A Spot', new_search_path %></li>
					<% elsif controller_name == "listings" && action_name == "index" %>
						<li class="on"><%= link_to 'Reserve A Spot', new_search_path %></li>
					<% else %>
						<li class="off"><%= link_to 'Reserve A Spot', new_search_path %></li>
					<% end %>
					<% if controller_name == "listings" && action_name == "index" %>
						<li class="off"><%= link_to 'List My Spot', new_listing_path %></li>
					<% elsif controller_name == "listings" %>
						<li class="on"><%= link_to 'List My Spot', new_listing_path %></li>
					<% else %>
						<li class="off"><%= link_to 'List My Spot', new_listing_path %></li>
					<% end %>
				</ul>
				
				<ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
							Welcome, <%= current_user.first_name %>! <b class="caret red-caret"></b>
						</a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My Account', user_path(current_user), method: :get %></li>
              <li><%= link_to 'Register My Spot', new_lease_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
				<% end %>
	    </div>
	  </div>
	</div>
</header>