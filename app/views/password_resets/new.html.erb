<legend>Password reset</legend>  
<%= form_tag password_resets_path, :method => :post do %>
<div class="row">
	<div class="custom-well span5">
		<div class="row">
			<div class="span2">
				<label>Email: <span class="red">*</span></label>
			</div>
			<div class="span2">
				<%= text_field_tag :email, params[:email], class: "span3" %>
			</div>
		</div>
			<hr>
		<div>
      <%= submit_tag "Reset Password", class: "btn btn-large pull-right" %>
    </div>
	</div>
</div>
<% end %>
