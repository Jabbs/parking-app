<%= form_tag('/login') do %>
<h3>Please sign in <p class="inline small">(<%= link_to "forgot password?", new_password_reset_path %>)</p></h3>
<hr>
<div class="row">
	<div class="span3">
		<%= text_field_tag :email, params[:email], class: "span2", placeholder: "Email" %>
		<%= password_field_tag :password, params[:password], class: "span2", placeholder: "Password" %>
	</div>
</div>
<div class="row">
	<div class="span1">
    <%= submit_tag "Login", class: "btn pull-left login" %>
  </div>
</div>
<% end %>
