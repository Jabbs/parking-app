<%= form_tag('/login') do %>
<h3>Please sign in to share your spot</h3>
<hr>
<div class="row">
	<div class="span3">
		<%= text_field_tag :email, params[:email], class: "span3", placeholder: "Email" %>
	</div>
	<div class="span2">
		<%= password_field_tag :password, params[:password], class: "span2", placeholder: "Password" %>
	</div>
	<div class="span1">
    <%= submit_tag "Login", class: "btn pull-left login" %>
  </div>
</div>
	<hr>

	</br>
	<p class="inline pull-left"><small><%= link_to "forgot password?", new_password_reset_path %></small></p>
<% end %>