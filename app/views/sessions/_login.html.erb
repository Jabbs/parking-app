<%= form_tag('/login') do %>
<h3>Please sign in first? <p class="inline"><small>Sign In</small></p></h3>
<hr>
<div class="row">
	<div class="span1">
		<label>Email:</label>
	</div>
	<div class="span2">
		<%= text_field_tag :email, params[:email], class: "span2" %>
	</div>
</div>
<div class="row">
	<div class="span1">
		<label>Password:</label>
	</div>
	<div class="span2">
		<%= password_field_tag :password, params[:password], class: "span2" %>
	</div>
</div>
	<hr>
	<div>
    <%= submit_tag "Login", class: "btn-large btn pull-left login" %>
  </div>
	</br>
	<p class="inline pull-left"><small><%= link_to "forgot password?", new_password_reset_path %></small></p>
<% end %>