<% if @cart.rent_hours.count != 0 %>
<table class="table table-striped table-condensed table-hover">
	<thead>
	  <tr>
	    <th>Spot</th>
	    <th>Time</th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	<% @cart.rent_hours.each do |rh| %>
	  <tr>
			<td><%= rh.spot.name %></td>
			<td><%= rh.date.strftime("%b %e, %Y") %> <%= rh.time_slot_hour %> -</br>
			<%= rh.date.strftime("%b %e, %Y") %> <%= rh.time_slot_end_hour %> </td>
			<td><%= link_to 'Del', '#', method: :post %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<% else %>
	<p><em>Cart is empty.</em></p>
<% end %>